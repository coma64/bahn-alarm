{
  "root": true,
  "ignorePatterns": ["projects/**/*"],
  "overrides": [
    {
      "files": ["*.ts"],
      "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:@angular-eslint/recommended",
        "plugin:@angular-eslint/template/process-inline-templates",
        "xo-typescript",
        "prettier"
      ],
      "rules": {
        // This isn't a library, no need prevent JS from accessing a private prop
        "@typescript-eslint/class-literal-property-style": "off",
        // Not possible with ngxs decorators
        "new-cap": "off",
        // Needed for ngxs action classes
        "@typescript-eslint/no-extraneous-class": "off",
        // Just looks too good
        "@typescript-eslint/no-confusing-void-expression": "off",
        // Angular needs those imports for DI
        "@typescript-eslint/consistent-type-imports": "off",
        // Just looks too good
        "no-return-assign": "off",
        // Still better than no alert
        "no-alert": "warn",
        // You can't tell pycharm to auto import the whole module using `* as ...`
        "@typescript-eslint/no-namespace": "off",
        // somehow broken for rxjs - many false positives
        "@typescript-eslint/no-unsafe-argument": "off",
        "@angular-eslint/directive-selector": [
          "error",
          {
            "type": "attribute",
            "prefix": "app",
            "style": "camelCase"
          }
        ],
        "@angular-eslint/component-selector": [
          "error",
          {
            "type": "element",
            "prefix": "app",
            "style": "kebab-case"
          }
        ]
      }
    },
    {
      "files": ["*.html"],
      "extends": ["plugin:@angular-eslint/template/recommended"],
      "rules": {}
    }
  ]
}
